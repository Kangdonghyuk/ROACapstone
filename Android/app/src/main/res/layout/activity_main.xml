<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFB85F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_serialNumber"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:hint="SerialNumber"
            android:background="#F8D09A"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="#FFC374">

            <Button
                android:id="@+id/button_connect"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFCB83"
                android:gravity="center"
                android:text="Connect"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_isConnected"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="not connected"
        android:textColor="#FF0000"
        android:gravity="center"
        android:background="#F8D09A"/>

    <Button
        android:id="@+id/button_createToken"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="create token"/>

    <!--<VideoView
        android:id="@+id/videoView_blockBox"
        android:layout_width="300dp"
        android:layout_height="300dp" /> -->

    <ImageView
        android:id="@+id/imageView_live"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="#FFFFFF"/>

</LinearLayout>